<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.breworks.dreamy">
    <uses-sdk android:minSdkVersion="14" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:name="Dreamy"
        android:theme="@style/AppTheme" >

        <meta-data android:name="DATABASE" android:value="dreamyDB.db" />
        <meta-data android:name="VERSION" android:value="2" />
        <meta-data android:name="QUERY_LOG" android:value="true" />
        <meta-data android:name="DOMAIN_PACKAGE_NAME" android:value="com.breworks.dreamy"/>

        <activity
            android:name=".Splash"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>

        <activity
            android:name=".logIn">
        </activity>

        <activity
            android:theme="@style/DialogWithCorners"
            android:name=".signUp" >
        </activity>


        <activity
            android:name=".Main"
            android:label="@string/app_name"
            android:launchMode="standard">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".Front"
            android:label="@string/title_activity_front" >
        </activity>

        <activity
            android:name=".DreamyForm" />

        <activity android:name=".DreamyFormUpdate"
            android:parentActivityName=".Main"/>

        <activity android:name=".ToDoList"
            android:launchMode="standard"
            android:parentActivityName=".Main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity android:name=".ToDoListNew"
            android:label="@string/app_name"
            android:launchMode="standard"
            android:parentActivityName=".Main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity android:name=".SelectedMiles"
            android:label="@string/app_name"
            android:launchMode="standard">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity android:name=".TodoSquare"
            android:parentActivityName=".Main"/>

        <activity
            android:name=".Notes"
            android:label="@string/app_name"
            android:launchMode="standard">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".FreeTime"
            android:label="@string/app_name"
            android:launchMode="standard">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".ToDoDetail"
            android:label="@string/app_name"/>

        <receiver android:name="DreamyWidgetProvider" >
            <intent-filter >
                <action
                    android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_info" />
        </receiver>

        <receiver android:name=".Alarm"></receiver>

    </application>

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

</manifest>
