<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:style/Theme.Holo.Light">
        <item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
    </style>

    <!-- Main page theme -->
    <style name="MainTheme" parent="@style/AppTheme">
        <item name="android:actionBarStyle">@style/ActionBarNoIcon</item>
        <item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>
    </style>

    <style name="AppTheme.Widget.TextView" parent="@style/android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/Roboto/Roboto-Light.ttf</item>
    </style>

    <style name="EditTextStyle" parent="@style/android:Widget.Holo.Light.EditText">
    </style>

    <style name="TitleFont">
        <item name="fontPath">fonts/Calligraffiti/Calligraffiti.ttf</item>
    </style>

    <style name="FontRobotoRegular">
        <item name="fontPath">fonts/Roboto/Roboto-Regular.ttf</item>
    </style>

    <!-- ActionBar style -->
    <style name="ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#80ffefdb</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <!-- ActionBar with hidden icon -->
    <style name="ActionBarNoIcon" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#80ffefdb</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>

    <!-- Custom dialog box -->
    <style name="DialogWithCorners" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@drawable/rounded_corner</item>
    </style>

    <style name="NoActionBar" parent="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen">
        <item name="android:background">#8fffffff</item>
    </style>

</resources>
