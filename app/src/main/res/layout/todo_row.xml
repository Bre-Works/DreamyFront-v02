<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/delTodo"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_action_remove"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cbTodo"
        android:layout_alignBottom="@+id/delTodo"
        android:layout_toStartOf="@+id/delTodo"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/taskInput"
        android:layout_toStartOf="@+id/toDetail"
        android:layout_alignTop="@+id/cbTodo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp"
        android:singleLine="true"
        android:layout_toLeftOf="@+id/toDetail"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toDetail"
        android:background="@drawable/ic_action_time"
        android:layout_alignBottom="@+id/cbTodo"
        android:layout_toLeftOf="@+id/delTodo"
        android:layout_toStartOf="@+id/delTodo"/>


</RelativeLayout>