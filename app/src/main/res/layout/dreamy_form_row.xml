<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/delMilestone"
        android:layout_alignParentRight="true"
        android:background="@drawable/remove_form" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/milestoneOut"
        android:layout_alignBottom="@+id/delMilestone"
        android:layout_toStartOf="@+id/delMilestone"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Inputted"
        android:layout_toStartOf="@+id/delMilestone"
        android:layout_alignTop="@+id/milestoneOut"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp"
        android:singleLine="true"
        android:autoText="true" />


</RelativeLayout>